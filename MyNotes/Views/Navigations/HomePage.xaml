<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MyNotes.Views.Navigations.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MyNotes.Views.Navigations"
      xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
      xmlns:templates="using:MyNotes.Templates">

  <StackPanel>
    <TextBlock Text="Home Page" />
    <templates:SubtleIconButton>
      <templates:SubtleIconButton.Icon>
        <FontIcon Glyph="{x:Bind IconPicker.Glyph, Mode=OneWay}"
                  FontFamily="Segoe UI Emoji" />
      </templates:SubtleIconButton.Icon>
      <templates:SubtleIconButton.Flyout>
        <Flyout Placement="BottomEdgeAlignedLeft">
          <templates:IconPicker x:Name="IconPicker" />
        </Flyout>
      </templates:SubtleIconButton.Flyout>
    </templates:SubtleIconButton>
  </StackPanel>
</Page>
